{
  "name": "opentechschool-website",
  "version": "1.0.0",
  "description": "Static Website for OpenTechSchool Community",
  "author": "OpenTechSchool <foundation@opentechschool.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "github.com/openTechSchool/website-relaunch"
  },
  "bugs": "github.com/openTechSchool/website-relaunch/issues",
  "keywords": [],
  "scripts": {
    "clean": "rimraf public/{css/*,js/*,img/*}",
    "postcss": "postcss static/css/main.css -u postcss-import postcss-url postcss-modules postcss-cssnext -c postcss.config.json -o public/css/main.css",
    "lint": "eslint static/js || true",
    "uglify": "mkdirp public/js -p && uglifyjs static/js/*.js -m -o public/js/app.js && uglifyjs static/js/*.js -m -c -o public/js/app.min.js",
    "imagemin": "imagemin static/img/* -o public/img",
    "build": "hugo && run-s postcss lint uglify imagemin",
    "watch": "onchange \"static/**/*\" -- run-s build",
    "serve": "hugo server"
  },
  "devDependencies": {
    "eslint": "2.10.2",
    "eslint-config-standard": "5.3.1",
    "eslint-plugin-promise": "1.3.0",
    "eslint-plugin-standard": "1.3.2",
    "hugo-bin": "^0.23.0",
    "imagemin-cli": "3.0.0",
    "mkdirp": "0.5.1",
    "npm-run-all": "2.1.1",
    "onchange": "2.4.0",
    "postcss-cli": "2.5.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-modules": "^1.1.0",
    "postcss-url": "^7.3.0",
    "rimraf": "2.5.4",
    "uglify-js": "2.6.2"
  },
  "browsers": [
    ">1%",
    "last 4 versions",
    "not ie <= 8"
  ]
}
